{
    "manifest_version": 3,
    "name": "Box Box",
    "version": "0.1.0",
    "description": "Mirror Everything with Boxes",
    "permissions": [
        "scripting",
        "activeTab",
        "storage",
        "offscreen",
        "tabs",
        "tabCapture"
    ],
    "host_permissions": ["<all_urls>"],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_title": "Box Box",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png"
        },
        "default_popup": "popup.html"
    },
    "background": { "service_worker": "background.js" },
    "commands": {
        "start-capture-box": {
            "suggested_key": {
                "default": "Ctrl+Shift+8",
                "mac": "Command+Shift+8"
            },
            "description": "Create a new capture box for the current tab"
        },
        "add-output-for-latest-box": {
            "suggested_key": {
                "default": "Ctrl+Shift+9",
                "mac": "Command+Shift+9"
            },
            "description": "Add an output for the most recent capture box"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_start",
            "all_frames": false
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["content.css", "overlay.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
